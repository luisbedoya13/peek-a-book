{
  "$schema": "https://deno.land/x/denon/schema.json",
  "scripts": {
    "start:dev": {
      "cmd": "deno run src/app.ts",
      "desc": "Run server in dev mode",
      "allow": [
        "net",
        "env",
        "read",
        "write"
      ],
      "env": {
        "PORT": "8082",
        "HOST": "localhost",
        "DB_PATH": "./database.sqlite"
      },
      "watch": true
    }
  }
}

